<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.makegallery.MakeGalleryActivity">

    <ImageButton
        android:id="@+id/img_back_make_gallery"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/makegallery_image_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="101dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_semibold"
        android:includeFontPadding="false"
        android:text="게시글 작성하기"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_make_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_back_make_gallery" />

    <Button
        android:id="@+id/btn_send_make_gallery"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/inter_regular"
        android:text="게시"
        android:textColor="#AAAAAA"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <EditText
        android:id="@+id/et_title_make_gallery"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:background="#00ff0000"
        android:fontFamily="@font/inter_regular"
        android:hint="제목"
        android:includeFontPadding="false"
        android:textColor="#343434"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/et_contents_make_gallery"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00ff0000"
        android:fontFamily="@font/inter_regular"
        android:hint="내용"
        android:includeFontPadding="false"
        android:textColor="#343434"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title_make_gallery" />

    <ImageView
        android:id="@+id/img_picture_make_gallery"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/item_gallery_image_background"
        android:backgroundTint="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/img_gallery_make_gallery"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/makegallery_image_gallery"
        app:layout_constraintStart_toStartOf="@+id/img_picture_make_gallery"
        app:layout_constraintTop_toBottomOf="@+id/img_picture_make_gallery" />

    <ImageButton
        android:id="@+id/img_camera_make_gallery"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/makegallery_image_camera"
        app:layout_constraintStart_toEndOf="@+id/img_gallery_make_gallery"
        app:layout_constraintTop_toTopOf="@+id/img_gallery_make_gallery" />


</androidx.constraintlayout.widget.ConstraintLayout>