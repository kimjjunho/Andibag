<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".handler.ErrorActivity">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="294dp"
            android:layout_height="222dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/error_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="181dp"
            android:layout_height="20dp"
            android:layout_marginTop="88dp"
            android:fontFamily="@font/inter_semibold"
            android:text="인터넷 연결을 확인해주세요!"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/btn_back_error"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/error_btn_back"
            android:fontFamily="@font/inter_semibold"
            android:text="이전 페이지로 돌아가기"
            android:textColor="#5C5C5C"
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <Button
            android:id="@+id/btn_login_error"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/error_btn_login"
            android:fontFamily="@font/inter_semibold"
            android:text="로그인 페이지로 돌아가기"
            android:textColor="@color/white"
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_back_error" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
